{
  "manifest_version": 2,
  "name": "Boundarizer",
  "description": "Highlights layout boundaries in your page",
  "icons": {
	"16": "icon_off_16.png",
	"48": "icon_off_48.png",
	"128": "icon_off_128.png"
  },
  "version": "1.0",
  "permissions": ["tabs", "http://*/*"],
  "browser_action": {
    "default_icon": "icon_off_48.png"
  },
  "background": { "scripts": ["background.js"] },
  "content_scripts" : [{
        "matches" : [ "*://*/*" ],
        "js" : ["ext.js", "boundarizr.js"]
    }]
}